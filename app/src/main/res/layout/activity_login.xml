<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout_LoginActivity_xml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView_logo_LoginActivity_xml"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/brandname"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:typeface="normal" />

        <LinearLayout
            android:id="@+id/linearLayout_inputfields_LoginActivity_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextUsername_LoginActivity_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="username"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="text"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextTextPassword_LoginActivity_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="password"
                android:ems="10"
                android:hint="@string/wachtwoord"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:drawableEnd="@drawable/ic_info"
                android:onClick="showPasswordRequirements"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_buttons_LoginActivity_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_inloggen_LoginActivity_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/inloggen"
                android:onClick="login"/>

            <Button
                android:id="@+id/button_registreren_LoginActivity_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/registreren" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>